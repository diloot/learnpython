{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Ajouter un nouveau Post{% endblock %}

{% block pageName %}
    <h2 class="text-center">Ajouter un nouveau Post</h2>
{% endblock %}

{% block content %}
<main class="container-fluid"> 
        <div class="row"><!--start form post content-->
            <div class="col-12 col-sm-8 offset-sm-1"><!--start new post block-->       
                <nav class="pt-2 col-12 "><!--start breadcrumb-->
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{path('index')}}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{path('dashboard_post_index')}}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Ajouter un nouveau Post</li>
                    </ol>
                </nav><!--end breadcrumb-->

                <div class="col-12 col-md-8 offset-md-1 mb-4"><!--start form content-->
                    {{ include('post/_form.html.twig') }}
                </div><!--end form content-->
            </div><!--end new post block-->
            <div class="pt-2 col-12 col-md-3"><!--start yellow button block-->
                <a href="{{ path('dashboard_post_index') }}" class="btn btn-warning ml-auto text-secondary mb-4" ><i class="fas fa-user-circle text-primary pr-2"></i>Retour au tableau de bord</a>
            </div><!--end yellow button block-->
        </div><!--end form post content-->
</main>
{% endblock %}
